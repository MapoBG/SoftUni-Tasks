<div class="row space-top">
    <div class="col-md-12">
        <h1>Furniture Details</h1>
    </div>
</div>
<div class="row space-top" id="{{id}}">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <blockquote class="card-blockquote">
                    <img src="{{imageVal}}" />
                </blockquote>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <p>Make: {{makeVal}}</p>
        <p>Model: {{modelVal}}</p>
        <p>Year: {{yearVal}}</p>
        <p>Description: {{descriptionVal}}</p>
        <p>Price: {{priceVal}}</p>
        <p>Material: {{materialVal}}</p>
    </div>
</div>