{{> header}}
<div class="offer-details">
    <h1>{{offer.itemName}}</h1>
    <div class="info">
        <img src="{{offer.imgUrl}}" alt="{{offer.itemName}}">
        <div class="description">{{offer.description}}
            <br>
            <br>
            <p class="price">${{offer.price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if offer.salesman}}
        <a href="#/edit-offer/{{offer.id}}">Edit</a>
        <a href="#/deleteItem/{{offer.id}}">Delete</a>
        {{else}}
        {{#if offer.alreadyBought}}
        <span>You bought it</span>
        {{else}}
        <a href="#/buy/{{offer.id}}">Buy</a>
        {{/if}}
        {{/if}}
    </div>
</div>
{{> footer}}